<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TemNoBolso" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimaryApp</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDarkApp</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimaryApp</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDarkApp</item>
        <item name="colorOnSecondary">@color/colorPrimaryDarkApp</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="despesaTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimaryDespesa</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDespesa</item>
        <item name="colorAccent">@color/coloraAccentDespesa</item>

    </style>
    <style name="receitaTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimaryReceita</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkReceita</item>
        <item name="colorAccent">@color/coloraAccentReceita</item>

    </style>

    <style name="Theme.TemNoBolso.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.TemNoBolso.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TemNoBolso.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>